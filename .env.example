# ====================
# APPLICATION
# ====================
APP_NAME=BRVM Data API
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# ====================
# BASE DE DONNÉES
# ====================
# URL de connexion à la base de données (utilisée par l'application FastAPI)
DATABASE_URL=mysql+pymysql://brvm_user:brvm_password@mysql:3306/brvm_db

# ====================
# VARIABLES MYSQL (pour Docker Compose uniquement)
# ====================
# Ces variables sont utilisées uniquement par le conteneur MySQL
# L'application FastAPI utilise DATABASE_URL ci-dessus
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=brvm_db
MYSQL_USER=brvm_user
MYSQL_PASSWORD=brvm_password

# ====================
# URLS BRVM
# ====================
BRVM_ACTIONS_URL=https://www.brvm.org/fr/cours-actions/0
BRVM_PDF_BASE_URL=https://www.brvm.org/sites/default/files/boc_{date}_2.pdf

# ====================
# SCHEDULER
# ====================
SCRAPER_INTERVAL_MINUTES=30
PDF_DOWNLOAD_HOURS=[12,18]

# ====================
# WEBHOOKS
# ====================
WEBHOOK_TIMEOUT=10
WEBHOOK_MAX_RETRIES=3

# ====================
# RÉPERTOIRES
# ====================
DOWNLOADS_DIR=downloads
LOGS_DIR=logs

# ====================
# TIMEZONE
# ====================
TIMEZONE=Africa/Abidjan

# ====================
# POOL DE CONNEXIONS DB
# ====================
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ====================
# LOGS
# ====================
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
